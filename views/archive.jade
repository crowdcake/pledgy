extends layout

block title
  title Funded projects - pledgy

block content
  link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
  div.container
    h3 Old projects
    ul.collection
      each project in projects
        a.collection-item(href='/project/#{project.id}') 
          h5 #{project.name}
          p #{project.subtitle}
  
  
  div.fixed-action-btn.fancy-floating-button
    a.btn-floating.btn-large.waves-effect.waves-light.red(href="/projects/new")
      i.material-icons add
