extends layout

block title
  title #{project.name} by #{project.owner} - pledgy

block content
  div.container
    h3 I want to pledge for "#{project.name}".
    div.divider
    div.row
      form.col.s12(action="/projects/#{project.id}/pledge", method="POST")#pledgeform
        div.row
          div.col.s12.m6.l6.input-field
            input#user_name(type="text", name="user_name").validate
            label(for="user_name") Your name
          div.col.s12.m6.l6.input-field
            input#amount(type="number", name="amount", step="any").validate
            label(for="amount") Amount (in â‚¬)
        div.row
          div.col.s12
            input#public(type="checkbox", checked="checked").filled-in
            label(for="public") Should your pledge be publicly displayed?


  div.fixed-action-btn.fancy-floating-button
    a.btn-floating.btn-large.waves-effect.waves-light#submit-pledgeform
      i.material-icons send
